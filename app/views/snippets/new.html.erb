<h1>New Snippet</h1>

<%= form_with(url: snippets_path, model: @lyric_snippet, local: true) do |form| %>


  <div class="field">
    <%= form.label :snippet %>
    <%= form.text_area :snippet %>
  </div>

  <div class="field">
    <%= form.label :artist %>
    <%= form.text_field :artist %>
  </div>

  <div class="field">
    <%= form.label :song %>
    <%= form.text_field :song %>
  </div>

  <div class="field">
    <%= form.label :difficulty %>
    <%= form.number_field :difficulty, in: 1..1000 %>
  </div>

  <div class="actions">
    <%= form.submit "Create Snippet" %>
  </div>
<% end %>

<%= link_to 'Back', welcome_home_path %>
